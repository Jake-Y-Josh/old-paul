<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password | Client Feedback System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <meta name="robots" content="noindex, nofollow">
  <link rel="icon" href="/favicon.svg" type="image/svg+xml">
  <style>
    :root {
      --primary-color: #ff5204;    /* Dynamic-FP Orange */
      --secondary-color: #00546c;  /* Dynamic-FP Dark Blue */
      --light-color: #ffffff;      /* White */
    }
    
    body {
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    
    .dynamic-header {
      background-color: var(--secondary-color);
      color: var(--light-color);
      padding: 1rem 0;
      width: 100%;
    }
    
    .dynamic-footer {
      background-color: var(--secondary-color);
      color: var(--light-color);
      padding: 1rem 0;
      text-align: center;
      width: 100%;
      margin-top: auto;
    }
    
    .main-content {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem 1rem;
    }
    
    .login-container {
      width: 100%;
      max-width: 420px;
      padding: 2.5rem;
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
    }
    
    .login-logo {
      text-align: center;
      margin-bottom: 2rem;
    }
    
    .login-logo img {
      max-width: 100%;
      height: auto;
      margin-bottom: 1rem;
    }
    
    .login-logo p {
      color: #6c757d;
      margin-bottom: 0;
    }
    
    .form-floating {
      margin-bottom: 1.25rem;
    }
    
    .btn-primary {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      padding: 0.75rem;
      font-weight: 600;
    }
    
    .btn-primary:hover {
      background-color: #e64500;
      border-color: #e64500;
    }
    
    .back-to-login {
      text-align: center;
      margin-top: 1.5rem;
    }
    
    a {
      color: var(--primary-color);
      text-decoration: none;
    }
    
    a:hover {
      color: #e64500;
      text-decoration: underline;
    }
    
    .footer-links a {
      color: var(--light-color);
      margin: 0 10px;
    }
    
    .footer-links a:hover {
      color: #f8f9fa;
    }
    
    .password-field {
      position: relative;
    }
    
    .password-toggle {
      position: absolute;
      top: 50%;
      right: 10px;
      transform: translateY(-50%);
      cursor: pointer;
      color: #6c757d;
      z-index: 10;
    }
    
    .password-requirements {
      margin-top: 0.5rem;
      font-size: 0.85rem;
      color: #6c757d;
    }
    
    .password-requirements ul {
      padding-left: 1.25rem;
      margin-bottom: 0;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="dynamic-header">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <img src="/images/branding/dynamic-chev.png" alt="Dynamic FP" height="32">
        </div>
        <div>
          <a href="/" class="btn btn-sm btn-outline-light">
            <i class="fas fa-home me-1"></i> Home
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="main-content">
    <div class="login-container">
      <div class="login-logo">
        <img src="/images/Dynamic-Orange.svg" alt="Dynamic FP" height="75" class="mb-3">
        <h4 class="mb-2">Reset Password</h4>
        <p>Enter your new password below</p>
      </div>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
        </div>
      <% } %>
      
      <form action="/admin/reset-password/<%= token %>" method="POST">
        <div class="form-floating password-field">
          <input type="password" class="form-control" id="password" name="password" placeholder="New Password" required minlength="8">
          <label for="password"><i class="fas fa-lock me-2"></i>New Password</label>
          <span class="password-toggle password-toggle-1">
            <i class="fas fa-eye"></i>
          </span>
        </div>
        
        <div class="password-requirements">
          <p class="mb-1">Password must:</p>
          <ul>
            <li>Be at least 8 characters long</li>
            <li>Include at least one uppercase letter</li>
            <li>Include at least one number</li>
          </ul>
        </div>
        
        <div class="form-floating password-field mt-3">
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required minlength="8">
          <label for="confirmPassword"><i class="fas fa-lock me-2"></i>Confirm Password</label>
          <span class="password-toggle password-toggle-2">
            <i class="fas fa-eye"></i>
          </span>
        </div>
        
        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-check-circle me-2"></i>Reset Password
          </button>
        </div>
      </form>
      
      <div class="back-to-login mt-4 text-center">
        <a href="/admin/login">
          <i class="fas fa-arrow-left me-1"></i> Back to login
        </a>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="dynamic-footer">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <p class="mb-2">Â© <%= new Date().getFullYear() %> Dynamic FP. All rights reserved.</p>
          <div class="footer-links">
            <a href="https://dynamic-fp.co.uk/privacy-policy" target="_blank">Privacy Policy</a>
            <a href="https://dynamic-fp.co.uk/terms-of-service" target="_blank">Terms of Service</a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {
      // Password visibility toggle for first password field
      $('.password-toggle-1').click(function() {
        const passwordField = $('#password');
        const passwordIcon = $(this).find('i');
        
        if (passwordField.attr('type') === 'password') {
          passwordField.attr('type', 'text');
          passwordIcon.removeClass('fa-eye').addClass('fa-eye-slash');
        } else {
          passwordField.attr('type', 'password');
          passwordIcon.removeClass('fa-eye-slash').addClass('fa-eye');
        }
      });
      
      // Password visibility toggle for confirm password field
      $('.password-toggle-2').click(function() {
        const passwordField = $('#confirmPassword');
        const passwordIcon = $(this).find('i');
        
        if (passwordField.attr('type') === 'password') {
          passwordField.attr('type', 'text');
          passwordIcon.removeClass('fa-eye').addClass('fa-eye-slash');
        } else {
          passwordField.attr('type', 'password');
          passwordIcon.removeClass('fa-eye-slash').addClass('fa-eye');
        }
      });
      
      // Check if passwords match
      $('#confirmPassword').on('input', function() {
        const password = $('#password').val();
        const confirmPassword = $(this).val();
        
        if (password && confirmPassword) {
          if (password !== confirmPassword) {
            $(this).addClass('is-invalid');
          } else {
            $(this).removeClass('is-invalid').addClass('is-valid');
          }
        }
      });
    });
  </script>
</body>
</html> 
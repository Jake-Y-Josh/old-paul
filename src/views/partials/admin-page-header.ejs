<%# Admin Page Header - Standard layout for all admin pages #%>
<div class="admin-page-header mb-4">
  <div class="container-fluid px-4 py-3">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h1 class="page-title mb-1"><%= pageTitle %></h1>
        <% if (typeof pageDescription !== 'undefined' && pageDescription) { %>
          <p class="text-muted mb-0"><%= pageDescription %></p>
        <% } %>
      </div>
      <div class="col-md-6 text-md-end">
        <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs && breadcrumbs.length > 0) { %>
          <nav aria-label="breadcrumb" class="d-inline-block mb-2 mb-md-0">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
              <% breadcrumbs.forEach((item, index) => { %>
                <% if (index === breadcrumbs.length - 1) { %>
                  <li class="breadcrumb-item active" aria-current="page"><%= item.label %></li>
                <% } else { %>
                  <li class="breadcrumb-item"><a href="<%= item.url %>"><%= item.label %></a></li>
                <% } %>
              <% }); %>
            </ol>
          </nav>
        <% } %>
        
        <% if (typeof actionButtons !== 'undefined' && actionButtons && actionButtons.length > 0) { %>
          <div class="action-buttons mt-3 mt-md-2">
            <% actionButtons.forEach(button => { %>
              <% if (button.type === 'link') { %>
                <a href="<%= button.url %>" class="btn <%= button.className || 'btn-primary' %> <%= button.small ? 'btn-sm' : '' %>">
                  <% if (button.icon) { %>
                    <i class="<%= button.icon %> <%= button.label ? 'me-1' : '' %>"></i>
                  <% } %>
                  <%= button.label || '' %>
                </a>
              <% } else if (button.type === 'button') { %>
                <button 
                  type="button" 
                  class="btn <%= button.className || 'btn-primary' %> <%= button.small ? 'btn-sm' : '' %>" 
                  <% if (button.attributes) { 
                    Object.entries(button.attributes).forEach(([key, value]) => { %>
                      <%= key %>="<%= value %>"
                    <% }); 
                  } %>
                >
                  <% if (button.icon) { %>
                    <i class="<%= button.icon %> <%= button.label ? 'me-1' : '' %>"></i>
                  <% } %>
                  <%= button.label || '' %>
                </button>
              <% } %>
            <% }); %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div> 